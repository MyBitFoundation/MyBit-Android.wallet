<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <RadioButton
        android:id="@+id/default_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/normal_margin"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/default_action"
        android:layout_toStartOf="@+id/delete_action"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textIsSelectable="true"
        android:textSize="@dimen/normal_text"
        tools:text="0XDEADBEEFDEADBEEFDEADBEEFDEADBEEFDEADBEEFDEADBEEF"
        />

    <ImageView
        android:id="@+id/delete_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/normal_margin"
        android:layout_toStartOf="@+id/layout_action_types"
        android:contentDescription="@string/empty"
        app:srcCompat="@drawable/ic_delete_forever_black_24dp"
        />

    <FrameLayout
        android:id="@+id/layout_action_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/normal_margin">

        <ImageView
            android:id="@+id/export_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty"
            app:srcCompat="@drawable/ic_file_download_black_24dp"/>

        <ImageView
            android:id="@+id/iv_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_visibility"/>

    </FrameLayout>


</RelativeLayout>
