<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ly_indicators">

    <LinearLayout
        android:id="@+id/ly_pin_code_one"
        android:layout_width="@dimen/pin_indicator"
        android:layout_height="@dimen/pin_indicator"
        android:background="@drawable/pin_non_active_shape"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/ly_pin_code_two"
        app:layout_constraintLeft_toRightOf="@id/ly_pin_code_one"
        android:layout_width="@dimen/pin_indicator"
        android:layout_height="@dimen/pin_indicator"
        android:layout_marginStart="@dimen/fab_margin"
        android:background="@drawable/pin_non_active_shape"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/ly_pin_code_three"
        app:layout_constraintLeft_toRightOf="@id/ly_pin_code_two"
        android:layout_width="@dimen/pin_indicator"
        android:layout_height="@dimen/pin_indicator"
        android:layout_marginStart="@dimen/fab_margin"
        android:background="@drawable/pin_non_active_shape"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/ly_pin_code_four"
        app:layout_constraintLeft_toRightOf="@id/ly_pin_code_three"
        android:layout_width="@dimen/pin_indicator"
        android:layout_height="@dimen/pin_indicator"
        android:layout_marginStart="@dimen/fab_margin"
        android:background="@drawable/pin_non_active_shape"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/ly_pin_code_five"
        app:layout_constraintLeft_toRightOf="@id/ly_pin_code_four"
        android:layout_width="@dimen/pin_indicator"
        android:layout_height="@dimen/pin_indicator"
        android:layout_marginStart="@dimen/fab_margin"
        android:background="@drawable/pin_non_active_shape"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/ly_pin_code_six"
        app:layout_constraintLeft_toRightOf="@id/ly_pin_code_five"
        android:layout_width="@dimen/pin_indicator"
        android:layout_height="@dimen/pin_indicator"
        android:layout_marginStart="@dimen/fab_margin"
        android:background="@drawable/pin_non_active_shape"
        android:orientation="vertical"/>

</android.support.constraint.ConstraintLayout>